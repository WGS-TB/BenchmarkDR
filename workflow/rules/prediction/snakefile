configfile: "config.yml"

rule ml_run:
    input:
        data="data/gene_data.csv",
        label="data/AllLabels.csv"
    params:
        methods=config["METHODS"]
    output:
        expand("ml/{method}.pkl",
            method=config["METHODS"])
    conda:
        "env.yml"
    shell:
        "python scripts/ml_run.py -d {input.data} -l {input.label} {params.methods}"

